<!DOCTYPE html>
<html lang="es">

  <%- include('../partials/head') %>
  


<body>
  <%- include('../partials/header') %>

    <main class="productdetail">
      <div class="imgprod">
        <img class="img-detail" src="/uploads/products/<%= theProduct.pdtImage %>" alt="">
      </div>
      <div class="producttext">
        <h3 class="title"><%= theProduct.pdtMarca %></h3>
          <p class="subtitle"><%= theProduct.pdtVariedad %></p>
          <p class="categoriaprod"><%= theProduct.pdtCategorias %></p>
          <p class="descriptionprod"><%= theProduct.pdtDescripcion %></p>
          <p class="price-detail">$<%= theProduct.pdtPrice %></p>
          
            <br>
            <br>
            <br>
            <br>
            <br>
              

              <div class="buttons-pdt-detail" style="width:50vw;margin:auto;">
                <button class="btn btn-lg btn-primary m-3">Comprar</button>
                <button class="btn btn-lg btn-primary m-3">Agregar al carrito</button>
                <form class="text-center" action="/products/<%= theProduct.id %>?_method=delete" method="POST">
                <button class="btn btn-lg btn-danger  m-3" type="submit">Eliminar</button>
                </form>
              </div>

            </div>

              

    </main>

    <%- include('../partials/footer') %>
</body>

</html>