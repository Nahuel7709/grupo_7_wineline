<!DOCTYPE html>
<html lang="es">

<html>

<%- include('../partials/head') %>

  

  <body>

    <!--Main Header-->


    <%- include('../partials/header') %>


      <!--Formulario de creaciÃ³n de productos-->

      <main class="browse-body">
        
        <div class="create-title-box">
        <h1 class="browse-title">OFERTAS</h1>
        

        <div class="all-products-box">
          <% for( let i=0; i < discountCategory.length; i++ ) { %>
              
            <section class="product-browse-box">
              <article class="product-article-browse">
              <a href="/products/read/<%= discountCategory[i].id %>">
                <div class="product-browse-title">
                <h2><%= discountCategory[i].name %></h2>
                <p class="variedad-browse"><%= discountCategory[i].varieties.name %></p>
                </div>
                  <div class="product-browse-img">
                  <img src="/uploads/products/<%= discountCategory[i].image %>" alt="imagen de producto" class="product-browse-img1">
                  </div>
                  <div class="browse-product-line"></div>
                  <div class="product-browse-data">
                  <div class="product-data-left">
                  <p><%= discountCategory[i].volumes.name %>.ml</p>
                  <p>Categoria: <%= discountCategory[i].categories.name %></p>
                  </div>
                  <div class="product-data-price">
                  <p class="product-browse-price">$<%= discountCategory[i].price %></p>
                  </div>
                  </div>
                  
            </a>
            </article>
            </section>
             
              <% } %>
      </div>
        


      </main>


      <%- include('../partials/footer') %>







  </body>

</html>