<!DOCTYPE html>
<html lang="es">

<html>

<%- include('../partials/head') %>

  

  <body>

    <!--Main Header-->


    <%- include('../partials/header') %>


      <!--Formulario de creaciÃ³n de productos-->

      <main class="browse-body">
        
        <div class="create-title-box">
        <h1 class="browse-title">LISTADO DE PRODUCTOS</h1>

          <div class="line-create"></div>
        </div>

        <div class="all-products-box">
            <% for( let i=0; i < productsList.length; i++ ) { %>
                
              <section class="product-browse-box">
                <article class="product-article-browse">
                <a href="/products/read/<%= productsList[i].id %>">
                  <div class="product-browse-title">
                  <h2><%= productsList[i].pdtMarca %></h2>
                  <p class="variedad-browse"><%= productsList[i].pdtVariedad %></p>
                  </div>
                    <div class="product-browse-img">
                    <img src="/uploads/<%= productsList[i].pdtImage %>" alt="imagen de producto" class="product-browse-img1">
                    </div>
                    <div class="browse-product-line"></div>
                    <div class="product-browse-data">
                    <div class="product-data-left">
                    <p><%= productsList[i].pdtPresentacion %>.ml</p>
                    <p>Categoria: <%= productsList[i].pdtCategorias %></p>
                    </div>
                    <div class="product-data-price">
                    <p class="product-browse-price">$<%= productsList[i].pdtPrice %></p>
                    </div>
                    </div>
                    
              </a>
              </article>
              </section>
               
                <% } %>
        </div>


      </main>


      <%- include('../partials/footer') %>







  </body>

</html>