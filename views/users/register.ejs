<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %>

  

  <body>
    <%- include('../partials/header') %> 

    <!--Main Header-->


    


<div class="text-center mt-5">
  
  <form action="/users" method="post" enctype="multipart/form-data"  style="width:70vw;margin:auto;background-color: black; padding: 50px; border-radius: 15px;">
    <a href="/"><img src="/images/wineline-logo2.png" height="72" alt="logo" class="form-logo"></a>
    <h1 style="font-family:Montserrat; font-weight: bolder; color: white;">Registro</h1>
    
    <label for="name" class="sr-only">Nombre y apellido</label>
    <% if (locals.errors && errors.usersName) { %>
      <div class="text-danger">
        <%= errors.usersName.msg %> 
      </div>
    <% } %>
    <input type="text" name="usersName" id="name" class="form-control mb-3 <%= locals.errors && errors.usersName ? "is-invalid" : null  %> " placeholder="Nombre y apellido" autofocus
    value=<%= locals.oldData ? oldData.usersName : null  %> >


   <label for="idUser" class="sr-only">Nombre de usuario</label>
    <% if (locals.errors && errors.usersId) { %>
      <div class="text-danger">
        <%= errors.usersId.msg %> 
      </div>
    <% } %>
    <input type="text" id="idUser" name="usersId" placeholder="Nombre de usuario" class="form-control mb-3 <%= locals.errors && errors.usersId ? "is-invalid" : null  %> " 
    value=<%= locals.oldData ? oldData.usersId : null  %> >
    
    <label for="name" class="sr-only">Dirección de envío</label>
    <% if (locals.errors && errors.usersDirec) { %>
      <div class="text-danger">
        <%= errors.usersDirec.msg %> 
      </div>
    <% } %>
    <input type="text" name="usersDirec" id="name" class="form-control mb-3 <%= locals.errors && errors.usersDirec ? "is-invalid" : null  %>" placeholder="Dirección de envío" autofocus
    value=<%= locals.oldData ? oldData.usersDirec : null  %> >
    
    
    <label for="name" class="sr-only">Teléfono</label>
    <% if (locals.errors && errors.usersTel) { %>
      <div class="text-danger">
        <%= errors.usersTel.msg %> 
      </div>
    <% } %>
    <input type="text" name="usersTel" id="name" class="form-control mb-3 <%= locals.errors && errors.usersTel ? "is-invalid" : null  %>" placeholder="Teléfono"  autofocus
    value=<%= locals.oldData ? oldData.usersTel : null  %> >
    
    
    <label for="emailAdress" class="sr-only">Email</label>
    <% if (locals.errors && errors.usersEmail) { %>
      <div class="text-danger">
        <%= errors.usersEmail.msg %> 
      </div>
    <% } %>
    <input type="text" name="usersEmail" id="emailAdress" class="form-control mb-3" placeholder="Direccion de correo electronico" autofocus
    value=<%= locals.oldData ? oldData.usersEmail : null  %> >
    
    
    <label for="password" class="sr-only">Contraseña</label>
    <% if (locals.errors && errors.usersPassword) { %>
      <div class="text-danger">
        <%= errors.usersPassword.msg %> 
      </div>
    <% } %>
    <input type="password" id="password" name="usersPassword" placeholder="Contraseña" class="form-control mb-3 <%= locals.errors && errors.usersPassword ? "is-invalid" : null  %>">
    
    
    <label for="profilePicture" class="sr-only">Imagen de perfil</label>
    <h6 style="text-align: start; color: white;">País de nacimiento:</h6>
    <% if (locals.errors && errors.country) { %>
      <div class="text-danger">
        <%= errors.country.msg %>
      </div>
    <% } %>
								<select 
									name="country" 
									class="form-select mb-3 <%= locals.errors && errors.country ? 'is-invalid' : null %>"
								>
									<option value="">Elegí un país</option>
									<%  
										let countries = ['Argentina', 'Bolivia', 'Colombia', 'Chile', 'Ecuador', 'Paraguay', 'Perú', 'Uruguay', 'Venezuela'];
									%>
									<% for (const oneCountry of countries) { %>
										<option 
											value="<%= oneCountry %>"
											<%= locals.oldData && (oneCountry === oldData.country) ? 'selected' : null %> 
										> <%= oneCountry %> </option>
									<% } %>
								</select>
							
    
    <h6 style="text-align: start; color: white;">Foto de perfil</h6>
    <input type="file" id="profilePicture" name="usersAvatar" placeholder="Imagen de perfil" class="form-control mb-3 <%= locals.errors && errors.usersAvatar ? 'is-invalid' : null %>">
    <% if (locals.errors && errors.usersAvatar) { %>
      <div class="text-danger">
        <%= errors.usersAvatar.msg %>
      </div>
    <% } %>
    <div class="mt-3">
      <button class="btn btn-lg btn-primary w-100 mb-3">Registrarse</button>
      <a href="/users/login"><button class="btn btn-lg btn-primary w-100" type="button">¿Ya tienes una cuenta?</button></a>
    </div>



  </form>
  
</div>




      <%- include('../partials/footer') %>
  </body>

</html>