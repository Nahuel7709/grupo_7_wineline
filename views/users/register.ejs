<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %>

  

  <body>
    <%- include('../partials/header') %> 

    <!--Main Header-->


    


<div class="text-center mt-5">
  
  <form action="/users/register" method="post" enctype="multipart/form-data"  style="width:70vw;margin:auto;background-color: black; padding: 50px; border-radius: 15px;">
    <a href="/"><img src="/images/wineline-logo2.png" height="72" alt="logo" class="form-logo"></a>
    <h1 style="font-family:Montserrat; font-weight: bolder; color: white;">Registro</h1>
    
    <label for="name" class="sr-only">Nombre y apellido</label>
    <% if (locals.errors && errors.usersName) { %>
      <div class="text-danger">
        <%= errors.usersName.msg %> 
      </div>
    <% } %>
    <input type="text" name="name" id="name" class="form-control mb-3 <%= locals.errors && errors.name ? "is-invalid" : null  %> " placeholder="Nombre y apellido" autofocus
    value=<%= locals.oldData ? oldData.name : null  %> >


   <label for="idUser" class="sr-only">Nombre de usuario</label>
    <% if (locals.errors && errors.userName) { %>
      <div class="text-danger">
        <%= errors.userName.msg %> 
      </div>
    <% } %>
    <input type="text" id="idUser" name="userName" placeholder="Nombre de usuario" class="form-control mb-3 <%= locals.errors && errors.userName ? "is-invalid" : null  %> " 
    value=<%= locals.oldData ? oldData.userName : null  %> >
    
    <label for="name" class="sr-only">Dirección de envío</label>
    <% if (locals.errors && errors.adress) { %>
      <div class="text-danger">
        <%= errors.adress.msg %> 
      </div>
    <% } %>
    <input type="text" name="adress" id="name" class="form-control mb-3 <%= locals.errors && errors.adress ? "is-invalid" : null  %>" placeholder="Dirección de envío" autofocus
    value=<%= locals.oldData ? oldData.adress : null  %> >
    
    
    <label for="name" class="sr-only">Teléfono</label>
    <% if (locals.errors && errors.cellphone) { %>
      <div class="text-danger">
        <%= errors.cellphone.msg %> 
      </div>
    <% } %>
    <input type="text" name="cellphone" id="name" class="form-control mb-3 <%= locals.errors && errors.cellphone ? "is-invalid" : null  %>" placeholder="Teléfono"  autofocus
    value=<%= locals.oldData ? oldData.cellphone : null  %> >
    
    
    <label for="email" class="sr-only">Email</label>
    <% if (locals.errors && errors.email) { %>
      <div class="text-danger">
        <%= errors.email.msg %> 
      </div>
    <% } %>
    <input type="text" name="email" id="email" class="form-control mb-3" placeholder="Direccion de correo electronico" autofocus
    value=<%= locals.oldData ? oldData.email : null  %> >
    
    
    <label for="password" class="sr-only">Contraseña</label>
    <% if (locals.errors && errors.password) { %>
      <div class="text-danger">
        <%= errors.password.msg %> 
      </div>
    <% } %>
    <input type="password" id="password" name="password" placeholder="Contraseña" class="form-control mb-3 <%= locals.errors && errors.password ? "is-invalid" : null  %>">
    
    
    <label for="profilePicture" class="sr-only">Imagen de perfil</label>
    <h6 style="text-align: start; color: white;">País de nacimiento:</h6>
    <% if (locals.errors && errors.country) { %>
      <div class="text-danger">
        <%= errors.country.msg %>
      </div>
    <% } %>
								<select 
									name="country" 
									class="form-select mb-3 <%= locals.errors && errors.country ? 'is-invalid' : null %>"
								>
									<option value="">Elegí un país</option>
									<%  
										let countries = ['Argentina', 'Bolivia', 'Colombia', 'Chile', 'Ecuador', 'Paraguay', 'Perú', 'Uruguay', 'Venezuela'];
									%>
									<% for (const oneCountry of countries) { %>
										<option 
											value="<%= oneCountry %>"
											<%= locals.oldData && (oneCountry === oldData.country) ? 'selected' : null %> 
										> <%= oneCountry %> </option>
									<% } %>
								</select>
							
    
    <h6 style="text-align: start; color: white;">Foto de perfil</h6>
    <input type="file" id="profilePicture" name="avatar" placeholder="Imagen de perfil" class="form-control mb-3 <%= locals.errors && errors.avatar ? 'is-invalid' : null %>">
    <% if (locals.errors && errors.avatar) { %>
      <div class="text-danger">
        <%= errors.avatar.msg %>
      </div>
    <% } %>
    <div class="mt-3">
      <button class="btn btn-lg btn-primary w-100 mb-3">Registrarse</button>
      <a href="/users/login"><button class="btn btn-lg btn-primary w-100" type="button">¿Ya tienes una cuenta?</button></a>
    </div>



  </form>
  
</div>




      <%- include('../partials/footer') %>
  </body>

</html>