<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %>

  

  <body>
    <%- include('../partials/header') %> 

    <!--Main Header-->


    


<div class="text-center mt-5">
  <form action="/users" method="post" enctype="multipart/form-data"  style="width:70vw;margin:auto;background-color: black; padding: 50px; border-radius: 15px;">
    <a href="/"><img src="/images/wineline-logo2.png" height="72" alt="logo" class="form-logo"></a>
    <h1 style="font-family:Montserrat; font-weight: bolder; color: white;">Registro</h1>
    <label for="name" class="sr-only">Nombre y apellido</label>
    <input type="text" name="usersName" id="name" class="form-control mb-3" placeholder="Nombre y apellido" required autofocus>
    <label for="idUser" class="sr-only">Nombre de usuario</label>
    <input type="text" id="idUser" name="usersId" placeholder="Nombre de usuario" class="form-control mb-3">
    <label for="name" class="sr-only">Dirección de envío</label>
    <input type="text" name="usersDirec" id="name" class="form-control mb-3" placeholder="Dirección de envío" required autofocus>
    <label for="name" class="sr-only">Teléfono</label>
    <input type="text" name="usersTel" id="name" class="form-control mb-3" placeholder="Teléfono" required autofocus>
    <label for="emailAdress" class="sr-only">Email</label>
    <input type="email" name="usersEmail" id="emailAdress" class="form-control mb-3" placeholder="Direccion de correo electronico" required autofocus>
    <label for="password" class="sr-only">Contraseña</label>
    <input type="password" id="password" name="usersPassword" placeholder="Contraseña" class="form-control mb-3" required>
    <label for="profilePicture" class="sr-only">Imagen de perfil</label>
    <h6 style="text-align: start; color: white;">País de nacimiento:</h6>
								<select 
									name="country" 
									class="form-select mb-3 <%= locals.errors && errors.country ? 'is-invalid' : null %>"
								>
									<option value="">Elegí un país</option>
									<%  
										let countries = ['Argentina', 'Bolivia', 'Brasil', 'Colombia', 'Chile', 'Ecuador', 'Paraguay', 'Perú', 'Uruguay', 'Venezuela'];
									%>
									<% for (const oneCountry of countries) { %>
										<option 
											value="<%= oneCountry %>"
											<%= locals.oldData && (oneCountry === oldData.country) ? 'selected' : null %> 
										> <%= oneCountry %> </option>
									<% } %>
								</select>
								<% if (locals.errors && errors.country) { %>
									<div class="text-danger">
										<%= errors.country.msg %>
									</div>
								<% } %>
    <h6 style="text-align: start; color: white;">Foto de perfil</h6>
    <input type="file" id="profilePicture" name="usersAvatar" placeholder="Imagen de perfil" class="form-control mb-3">
    <div class="mt-3">
      <button class="btn btn-lg btn-primary w-100 mb-3">Registrarse</button>
      <a href="/users/login"><button class="btn btn-lg btn-primary w-100" type="button">¿Ya tienes una cuenta?</button></a>
    </div>
  </form>
  
</div>




      <%- include('../partials/footer') %>
  </body>

</html>