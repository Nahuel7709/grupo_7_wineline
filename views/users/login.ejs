<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %>



  <body>
    <%- include('../partials/header') %>

      <!--Main Header-->





      <div class="text-center mt-5">
        <form method="POST" action="/users/login"
          style="width:70vw;margin:auto;background-color: black; padding: 50px; border-radius: 15px;" id="loginForm">
          <a href="/"><img src="/images/wineline-logo2.png" height="72" alt="logo" class="form-logo"></a>
          <h1 style="font-family:Montserrat; font-weight: bolder; color: white;">Login</h1>

          <label for="email" class="sr-only">Email</label>
          <% if (locals.errors && errors.email) { %>
            <div class="text-danger">
              <%= errors.email.msg %>
            </div>
            <% } %>
              <input type="text" name="email" id="email" class="form-control mb-3"
                placeholder="Direccion de correo electronico" autofocus value=<%=locals.oldData ? oldData.email : null
                %> > <span class="mb-3"></span>

              <label for="password" class="sr-only">Contrase単a</label>
              <% if (locals.errors && errors.password) { %>
                <div class="text-danger">
                  <%= errors.password.msg %>
                </div>
                <% } %>
                  <input type="password" id="password" name="password" placeholder="Contrase単a"
                    class="form-control mb-3 <%= locals.errors && errors.password ? " is-invalid" : null %>"><span
                    class="mb-3"></span>

                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="remember" value="remember-me"> Recordarme
                    </label>
                  </div>
                  <a href="" style="text-decoration: none;">多Ha olvidado su contrase単a?</a>
                  <div class="mt-3">
                    <button class="btn btn-lg btn-primary w-100">Login</button>
                  </div>
        </form>

      </div>




      <%- include('../partials/footer') %>
        <script src="/js/loginValidation.js"></script>
  </body>

</html>