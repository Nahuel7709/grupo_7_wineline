    <input type="password" name="password" id="password" placeholder="Contraseña" class="form-control mb-3">
    <div class="checkbox">
      <label>
        <input type="checkbox" name="remember" value="remember-me"> Recordarme
      </label>
    </div>
    <a href="" style="text-decoration: none;">¿Ha olvidado su contraseña?</a>
    <div class="mt-3">
      <button class="btn btn-lg btn-primary w-100">Login</button>
    </div>
  </form>
  
</div>




